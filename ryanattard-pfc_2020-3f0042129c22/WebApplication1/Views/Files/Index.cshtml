@model IEnumerable<WebApplication1.Models.File>
<br />
@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
@if (ViewBag.Message != null)
{
    <label>@ViewBag.Message</label>
}
<form method="post" action="/Files/DeleteAll">
    <p>
        @Html.ActionLink("Create File", "Create", "Files", null, new { @class = "btn btn-sm btn-outline-dark" })
    </p>
    <table class="table">
        <tr>
            <th>
                <input type="submit" value="Delete Selected" class="btn btn-md btn-dark" />
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerFk)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="ids" value="@item.Id" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerFk)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("Send", "Send", new { FieldId = item.Id })
                    @*<button type="button" id="@item.Id" class="btnLink btn btn-md btn-dark">Share</button>*@
                </td>
            </tr>
        }
    </table>
</form>

